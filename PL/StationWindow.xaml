<Window x:Class="PL.StationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StationWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid" Margin="-4,0,4,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="AddStationGrid" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="39*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.Background>
                <ImageBrush ImageSource="/stationAdd.png" Opacity="0.35"/>
            </Grid.Background>


            <Label Content="ID" HorizontalAlignment="Left" Height="44" Margin="605,89,0,0" VerticalAlignment="Top" Width="45" FontSize="25" FontWeight="Bold" Foreground="#FFEDDCDC" FontStyle="Italic"/>
            <Label Content="Name" HorizontalAlignment="Left" Height="52" Margin="571,146,0,0" VerticalAlignment="Top" Width="120" FontSize="25" FontWeight="Bold" FontStyle="Italic" Foreground="#FFEDDCDC"/>
            <Label Content="Charge Slots" HorizontalAlignment="Left" Height="53" Margin="493,208,0,0" VerticalAlignment="Top" Width="208" FontSize="25" FontWeight="Bold" FontStyle="Italic" Foreground="#FFEDDCDC"/>
            <Label Content="Latitude" HorizontalAlignment="Left" Height="56" Margin="542,262,0,0" VerticalAlignment="Top" Width="134" FontSize="25" FontWeight="Bold" FontStyle="Italic" Foreground="#FFEDDCDC"/>
            <Label Content="Longitude" HorizontalAlignment="Left" Height="58" Margin="522,335,0,0" VerticalAlignment="Top" Width="133" RenderTransformOrigin="0.512,2.912" FontSize="25" FontWeight="Bold" FontStyle="Italic" Foreground="#FFEDDCDC"/>
            <TextBox x:Name="txt_id" HorizontalAlignment="Left" Height="28" Margin="655,98,0,0" Text="{Binding ID, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="124"/>
            <TextBox x:Name="txt_name" HorizontalAlignment="Left" Height="28" Margin="655,158,0,0" Text="{Binding Name, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
            <TextBox x:Name="txt_CS" HorizontalAlignment="Left" Height="28" Margin="655,217,0,0" Text="{Binding ChargeSlots, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
            <TextBox x:Name="txt_lat" HorizontalAlignment="Left" Height="28" Margin="654,276,0,0" Text="{Binding Loc.latitude, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="125" />
            <TextBox x:Name="txt_long" HorizontalAlignment="Left" Height="28" Margin="655,343,0,0" Text="{Binding Loc.longitude, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="125" />
            <Button Content="ADD" HorizontalAlignment="Left" Height="48" Margin="368,183,0,0" VerticalAlignment="Top" Width="120" Click="Add_button" FontSize="30" FontWeight="Bold" Foreground="#FF38383F" Background="#FF6A6A73" FontStyle="Italic"/>

        </Grid>
        <Grid Name="UpdateStationGrid" Visibility="Visible" Opacity="0.745" Margin="-10,0,0,0">
            <Grid.Background>
                <ImageBrush ImageSource="/stationBackground.png" Opacity="0.35"/>
            </Grid.Background>


            <ListView x:Name="DronesChargingListView" ItemsSource="{Binding}" MouseDoubleClick="DronesChargingListView_MouseDoubleClick"  Margin="0,240,397,0" Visibility="Visible" Background="#FF4E9B46" FontSize="14" FontStyle="Italic"/>
            <!--Update Button-->
            <Button x:Name="UpdateButton" Content="UPDATE" HorizontalAlignment="Left" 
                   
                    Background="#FF4E9B46" Margin="550,60,0,0" VerticalAlignment="Top" ToolTip="UPDATE" Height="51" Width="132" BorderBrush="Black" Click="ClickUpdate" Opacity="100" FontFamily="Cambria" FontSize="30" FontWeight="Bold" FontStyle="Italic">

            </Button>
            <!--we didn't do binding for this part because we use the same text box for 2 things different (one string and one int) so it was better to not use it instead of using two textboxes-->
            <TextBox x:Name="UpdateNameTextBox" Text="{Binding name,Mode=OneWayToSource}" Visibility="Hidden"  HorizontalAlignment="Left" Height="28" Margin="533,189,0,0"  Background="White" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" BorderBrush="#FF4E9B46" BorderThickness="3,3,3,3"/>
            <Label x:Name="UpdateNameLabel"  HorizontalAlignment="Left" Margin="456,128,0,0" VerticalAlignment="Top" Height="38" Width="302" FontSize="16" FontWeight="Bold" FontStyle="Italic" BorderThickness="3,3,3,3" BorderBrush="Black" Foreground="Black" Visibility="Hidden"/>
            <Button x:Name="CheckNameUpdate"  HorizontalAlignment="Left" Height="28" Margin="648,189,0,0" VerticalAlignment="Top"  Width="34" Visibility="Hidden" Click="Check_Click_Update">
                <Button.Background>
                    <ImageBrush ImageSource="/checked.png"/>
                </Button.Background>
            </Button>
            <TextBox x:Name="UpdateCSTextBox" Text="{Binding freeChargeSlots,Mode=OneWayToSource}" Visibility="Hidden"  HorizontalAlignment="Left" Height="28" Margin="533,309,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" BorderBrush="#FF4E9B46" BorderThickness="3,3,3,3">
                <TextBox.Background>
                    <SolidColorBrush Color="White" Opacity="0.3"/>
                </TextBox.Background>
            </TextBox>
            <Label x:Name="UpdateCSLabel"  HorizontalAlignment="Left" Margin="456,255,0,0" VerticalAlignment="Top" Height="38" Width="302" FontSize="16" FontWeight="Bold" FontStyle="Italic" BorderThickness="3,3,3,3" BorderBrush="Black" Foreground="Black" Visibility="Hidden"/>
            <Button x:Name="CheckCSUpdate" HorizontalAlignment="Left" Height="28" Margin="648,309,0,0" VerticalAlignment="Top"  Width="34" Visibility="Hidden" Click="Check_Click_UpdateCS">
                <Button.Background>
                    <ImageBrush ImageSource="/checked.png"/>
                </Button.Background>
            </Button>
            <Label x:Name="stationDetails" Content="" HorizontalAlignment="Left" Margin="20,-1,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="392" Height="232" FontWeight="Bold" FontStyle="Italic" FontSize="14" Foreground="#FF02020F">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.038"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <ListView x:Name="DronesListView" Visibility="Hidden">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

    </Grid>
</Window>
