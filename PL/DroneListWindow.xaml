<Window x:Name="___No_Name_" x:Class="PL.DroneListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneListWindow" Height="450" Width="800"
        Closing="OnClosing">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="194*"/>
        </Grid.RowDefinitions>
        <Grid Name="UpGrid" Height="auto" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions >
            <ComboBox Name="comboStatusSelector"  ToolTip="Choose a Status" Grid.Column="1" HorizontalAlignment= "Center" Width="133" AutomationProperties.Name="Drone's Statut" 
                      SelectionChanged="comboStatusSelector_SelectionChanged" 
                      BorderThickness="1,1,1,1" FontStretch="Normal" 
                      FontStyle="Italic" FontWeight="ExtraBlack" OpacityMask="#FF3E3E40" >
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="Blue"/>
                        <GradientStop Color="#FF871313" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
            </ComboBox>

            <ComboBox  Name="comboWeightSelector" SelectionChanged="comboWeightSelector_SelectionChanged" Grid.Column="3" ToolTip="Choose a Weight" HorizontalAlignment="Left" 
                       VerticalAlignment="Center" Width="133" Height="48" Grid.ColumnSpan="2">

            </ComboBox>
            <Label Content="Drone Max Weight: " Grid.Column="2" HorizontalAlignment="Center" Height="48" VerticalAlignment="Center" Width="133"/>
            <Label x:Name="lblTBD" Content="Drone status: " Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="133"/>
            <Button Content="CLEAR" Grid.Column="4" Background="Red" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="26" Width="60" FontWeight="Bold" FontStyle="Italic" BorderBrush="#FFE01515" Foreground="#FFF7F1F1" FontSize="15" FontFamily="Arial Black" Click="Button_Clear"/>

        </Grid>
        <ListView x:Name="DronesListView" Margin="0,46,0,0" Visibility="Visible" MouseDoubleClick="DroneListView_MouseDoubleClick" Grid.RowSpan="2"/>
        <!-- <Button Content="Add a Drone" HorizontalAlignment="Left" Margin="640,0,0,0" VerticalAlignment="Center" Width="150" Height="48" Click="button_addDrone"/>-->
        <Button Content="Add a Drone" Margin="671,5,19,5" Click="button_addDrone" Background="#FF004CFF" FontWeight="Bold" FontFamily="Georgia Pro">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Stroke="Black"  
                       StrokeThickness="0">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Offset="0"  
                                        Color="#FF007AFF" />
                                    <GradientStop Offset="1"  
                                        Color="Gray" />
                                    <GradientStop Offset="1"  
                                        Color="DarkGray" />
                                    <RadialGradientBrush.Transform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleY="0.65" />
                                        </TransformGroup>
                                    </RadialGradientBrush.Transform>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <ContentPresenter HorizontalAlignment="Center"  
                                VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Margin="618,10,0,10" Click="Button_Close" Width="41" Foreground="#FFFDFCFC" FontFamily="David" FontWeight="Bold" FontSize="11">
            <Button.Background>
                <ImageBrush ImageSource="/close.png"/>
            </Button.Background>
        </Button>



    </Grid>
    
</Window>
